@inherits BsControlBase<string>
<BsValidatedGroup Label="@Label" Id="@Id" ValueExpression="@Validate">
    <input @attributes="AdditionalAttributes" class="form-control @CssClass"
           @bind="@CurrentValue" disabled="@(Mode == EditMode.ReadOnly)"  />
</BsValidatedGroup>
@code{

    protected override bool TryParseValueFromString(string value, out string result, out string validationErrorMessage)
    {
        result = value;
        validationErrorMessage = null;
        return true;
    }
}